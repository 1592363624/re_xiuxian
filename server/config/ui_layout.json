{
    "layout": {
        "header": {
            "components": [
                { "id": "serverStatus", "type": "widget", "props": { "showPlayers": true, "showUptime": true } },
                { "id": "playerInfo", "type": "widget", "props": { "showAvatar": true, "showRealm": true, "showLevel": true } },
                { "id": "resources", "type": "widget", "props": { "showSpiritStones": true, "showExp": true } }
            ],
            "style": { "height": "60px", "backgroundColor": "#1a1a2e" }
        },
        "main": {
            "components": [
                { "id": "mapPanel", "type": "panel", "props": { "showMiniMap": true, "showCurrentLocation": true }, "position": "left" },
                { "id": "gameLog", "type": "panel", "props": { "maxMessages": 100, "autoScroll": true }, "position": "right" },
                { "id": "actionBar", "type": "panel", "props": { "showCooldowns": true, "compactMode": false }, "position": "bottom" },
                { "id": "playerStatus", "type": "panel", "props": { "showBars": true, "showAttributes": true, "showBuffs": true }, "position": "bottomLeft" }
            ],
            "style": { "backgroundColor": "#16213e" }
        },
        "footer": {
            "components": [
                { "id": "globalChat", "type": "widget", "props": { "showChannel": true, "maxMessages": 50 }, "style": { "width": "400px" } },
                { "id": "quickActions", "type": "widget", "props": { "buttons": ["practice", "inventory", "skills", "social"] } }
            ],
            "style": { "height": "80px", "backgroundColor": "#1a1a2e" }
        },
        "modals": {
            "default": {
                "overlay": { "opacity": 0.7, "blur": 5 },
                "container": { "maxWidth": "600px", "borderRadius": "12px" }
            },
            "confirmation": {
                "overlay": { "opacity": 0.5 },
                "container": { "maxWidth": "400px" }
            },
            "fullscreen": {
                "overlay": { "opacity": 0.9 },
                "container": { "width": "100%", "height": "100%" }
            }
        }
    },
    "components": {
        "Modal": {
            "defaultProps": {
                "showCloseButton": true,
                "closeOnOverlayClick": true,
                "closeOnEscape": true
            },
            "style": {
                "headerBg": "#2d3a4f",
                "bodyBg": "#1a1a2e",
                "footerBg": "#16213e"
            }
        },
        "Toast": {
            "defaultProps": {
                "duration": 3000,
                "position": "top-right"
            },
            "style": {
                "success": "#28a745",
                "error": "#dc3545",
                "warning": "#ffc107",
                "info": "#17a2b8"
            }
        },
        "ProgressBar": {
            "defaultProps": {
                "showLabel": true,
                "height": "8px"
            },
            "style": {
                "hp": { "color": "#e74c3c", "background": "#2c0b0e" },
                "mp": { "color": "#3498db", "background": "#0d1b2a" },
                "exp": { "color": "#9b59b6", "background": "#1a1a2e" },
                "lifespan": { "color": "#f39c12", "background": "#2c2c0d" }
            }
        }
    }
}
