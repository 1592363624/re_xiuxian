{
  "openapi": "3.0.0",
  "info": {
    "title": "重生之凡人修仙传 API",
    "description": "修仙文字游戏后端接口文档",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "本地开发环境"
    }
  ],
  "paths": {
    "/api/status": {
      "get": {
        "summary": "检查服务器状态",
        "description": "获取服务器和数据库的连接状态",
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "example": {
                  "status": "ok",
                  "message": "服务器正常运行，数据库连接成功",
                  "timestamp": "2024-05-20T12:00:00.000Z"
                }
              }
            }
          }
        }
      }
    },
    "/api/admin/time-travel": {
      "post": {
        "summary": "时间加速 (GM)",
        "description": "让游戏时间流逝指定年份，增加所有玩家寿命并触发死亡判定。",
        "tags": ["Admin"],
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "years": {
                    "type": "number",
                    "description": "加速的年份 (例如 1.5)"
                  }
                },
                "required": ["years"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "操作成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "summary": "用户注册",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "hanli"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  },
                  "nickname": {
                    "type": "string",
                    "example": "韩天尊"
                  }
                },
                "required": ["username", "password", "nickname"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "注册成功",
            "content": {
              "application/json": {
                "example": {
                  "message": "注册成功，踏入仙途",
                  "playerId": 1
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "用户登录",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "hanli"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "example": {
                  "message": "登录成功",
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                  "player": {
                    "id": 1,
                    "nickname": "韩天尊",
                    "realm": "凡人"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/player/me": {
      "get": {
        "summary": "获取当前玩家详细信息",
        "description": "获取当前登录玩家的完整数据，包括气血、修为、属性等",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "example": {
                  "id": 1,
                  "username": "hanli",
                  "nickname": "韩天尊",
                  "realm": "炼气期",
                  "exp": 100,
                  "exp_next": 200,
                  "spirit_stones": 50,
                  "hp_current": 100,
                  "hp_max": 100,
                  "mp_current": 100,
                  "mp_max": 100,
                  "lifespan_current": 18.5,
                  "lifespan_max": 100,
                  "attributes": {
                    "atk": 10,
                    "def": 5,
                    "speed": 10,
                    "sense": 10
                  }
                }
              }
            }
          },
          "401": {
            "description": "未授权"
          },
          "404": {
            "description": "玩家不存在"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
