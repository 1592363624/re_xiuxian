{
  "openapi": "3.0.0",
  "info": {
    "title": "重生之凡人修仙传 API",
    "description": "修仙文字游戏后端接口文档",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "本地开发环境"
    }
  ],
  "paths": {
    "/api/status": {
      "get": {
        "summary": "检查服务器状态",
        "description": "获取服务器和数据库的连接状态",
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "example": {
                  "status": "ok",
                  "message": "服务器正常运行，数据库连接成功",
                  "timestamp": "2024-05-20T12:00:00.000Z"
                }
              }
            }
          }
        }
      }
    },
    "/api/system/stats": {
      "get": {
        "summary": "获取服务器统计信息",
        "description": "获取当前在线人数和总玩家数",
        "tags": ["System"],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "online": {
                      "type": "integer",
                      "description": "在线人数"
                    },
                    "total": {
                      "type": "integer",
                      "description": "总玩家数"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/admin/time-travel": {
      "post": {
        "summary": "时间加速 (GM)",
        "description": "让游戏时间流逝指定年份，增加所有玩家寿命并触发死亡判定。",
        "tags": ["Admin"],
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "years": {
                    "type": "number",
                    "description": "加速的年份 (例如 1.5)"
                  }
                },
                "required": ["years"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "操作成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/seclusion/start": {
      "post": {
        "summary": "开始闭关",
        "description": "进入闭关状态，无法进行其他操作",
        "tags": ["Player"],
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "duration": {
                    "type": "integer",
                    "description": "闭关时长(秒)"
                  }
                },
                "required": ["duration"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "开始闭关成功"
          }
        }
      }
    },
    "/api/seclusion/end": {
      "post": {
        "summary": "结束闭关",
        "description": "结束闭关状态并结算奖励",
        "tags": ["Player"],
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "结算成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "exp_gain": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "summary": "用户注册",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "hanli"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  },
                  "nickname": {
                    "type": "string",
                    "example": "韩天尊"
                  }
                },
                "required": ["username", "password", "nickname"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "注册成功",
            "content": {
              "application/json": {
                "example": {
                  "message": "注册成功，踏入仙途",
                  "playerId": 1
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "用户登录",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "hanli"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "example": {
                  "message": "登录成功",
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                  "player": {
                    "id": 1,
                    "nickname": "韩天尊",
                    "realm": "凡人"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/player/me": {
      "get": {
        "summary": "获取当前玩家详细信息",
        "description": "获取当前登录玩家的完整数据，包括气血、修为、属性等",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "example": {
                  "id": 1,
                  "username": "hanli",
                  "nickname": "韩天尊",
                  "realm": "炼气期13层",
                  "exp": "2744000",
                  "exp_next": "2744000",
                  "exp_cap": "2744000",
                  "exp_progress": 1,
                  "can_breakthrough": true,
                  "next_realm": "筑基初期",
                  "spirit_stones": 50,
                  "hp_current": 100,
                  "hp_max": 100,
                  "mp_current": 100,
                  "mp_max": 100,
                  "lifespan_current": 18.5,
                  "lifespan_max": 100,
                  "last_online": "2024-05-20T12:00:00.000Z",
                  "spirit_roots": {
                    "type": "wood",
                    "value": 100
                  },
                  "attributes": {
                    "hp_max": 100,
                    "mp_max": 0,
                    "atk": 10,
                    "def": 5,
                    "speed": 10,
                    "sense": 10
                  }
                }
              }
            }
          },
          "401": {
            "description": "未授权"
          },
          "404": {
            "description": "玩家不存在"
          }
        }
      }
    },
    "/api/breakthrough/try": {
      "post": {
        "summary": "尝试突破",
        "description": "当修为达到当前境界上限时，尝试突破到下一境界（可能成功或失败）",
        "tags": ["Player"],
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "请求成功（包含成功或失败结果）",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "突破成功！境界提升至「筑基初期」。",
                  "data": {
                    "old_realm": "炼气期13层",
                    "new_realm": "筑基初期",
                    "exp": "0",
                    "exp_cap": "3375000",
                    "unlocked": {
                      "mp_regen_rate": 100,
                      "toxicity_decay": 5
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "修为未达上限或无法突破",
            "content": {
              "application/json": {
                "example": {
                  "message": "修为未达上限，无法突破（1000 / 2744000）"
                }
              }
            }
          },
          "401": {
            "description": "未授权"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
